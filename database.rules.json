    ".read": "auth != null  || root.child('user').child(auth.uid).child('role').val() == 'admin'",
    ".write": "auth != null || root.child('user').child(auth.uid).child('role').val() == 'admin'",
    "orderData": {
      ".indexOn": [
        "order_status"
      ]
    },
    "product": {
      ".indexOn": [
        "sku"
      ]
    }
  }
